import random

coin = random.randint(0, 1)

if coin == 1:
    print("Heads")
else:
    print("Tails")
    
# Cooler version selfmade

import random

choice = input('Choose: "Heads" or "Tails": ')

random_number = random.randint(0, 1)

computer = None

if random_number == 0:
    computer = "Heads"
else:
    computer = "Tails"

if choice == computer:
    print(f"It's {computer}. You win!")
elif choice != computer:
    print(f"It's {computer}. You lose!")
